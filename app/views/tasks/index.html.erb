<p id="notice"><%= notice %></p>

<h1 class="mb-5 pb-3">Tasks</h1>

<table class="mt-5 pt-3 table-hover table-borderless bg-white text-dark">
  <thead>
    <tr>
      <th class="mr-3 pr-3">Position</th>
      <th class="mx-3 px-3">Title</th>
      <th class="mx-3 px-3">Is done</th>
      <th colspan="3" class="mx-auto px-auto"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="ml-3 pl-3"><%= task.position %></td>
        <td class="ml-5 pl-4"><%= task.title %></td>
        <td class="ml-5 pl-4"><%= task.is_done %></td>
        <td class="mx-auto px-auto"><%= link_to 'Show', task %></td>
        <td class="mx-auto px-auto"><%= link_to 'Edit', edit_task_path(task) %></td>
        <td class="mx-auto px-auto"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

